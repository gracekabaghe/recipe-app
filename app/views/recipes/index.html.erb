<div>
  <%= button_to "Add a new recipe", new_recipe_path, :method => :get %>
  <% @recipes.each do |recipe| %>
    <div>
     <div>
     <%= link_to recipe.name, recipe_path(recipe.id) %>
        <%= button_to "Delete", recipe_path(recipe.id), :method => :delete %>
      </div>
     <p><%=recipe.description%></p>
   </div>
<%end%>
</div> 